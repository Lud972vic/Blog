{% extends 'base.html.twig' %}

{% block title %} Article/{{ article.titre }} {% endblock %}

{% block body %}
    <div class="shadow p-3 mb-5 bg-white rounded container mt-5">
        <div class="jumbotron text-center">
            <h1 class="display-4 mb-5">{{ article.titre }}</h1>
            <img class="image_article" src="{{ asset('uploads/images/featured/' ~ article.image) }}" class="mr-3"
                 alt="">
            <small><p>Publié le {{ article.createdAt | date('d/m/Y à H\\Hi') }}</p></small>
            <br>
            <p class="lead">{{ article.contenu | raw }}</p>

            <hr class="my-4">

            <div class="container">
                <div class="row">
                    <div class="col">
                        <p>Catégories</p>
                        <ul>
                            {% for categorie in article.categorie %}
                                <button type="button" class="btn btn-light btn-sm" data-toggle="tooltip"
                                        data-placement="top" title="Tooltip on top">
                                    {{ categorie.nom }}
                                </button>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="col">
                        <p>Mots-clès</p>
                        <ul>
                            {% for motcle in article.motCle %}
                                <button type="button" class="btn btn-light btn-sm" data-toggle="tooltip"
                                        data-placement="top" title="Tooltip on top">
                                    {{ motcle.motcle }}
                                </button>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="shadow p-3 mb-5 bg-white rounded">
            <div class="text-center mb-5">
                <h1 class="display-4">Les commentaires</h1>
                <small>
                    <p>
                        <span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
                        {{ article.commentaire | length }} commentaires
                    </p>
                </small>

            </div>

            <ul class="lead">
                {% for commentaire in article.commentaire %}
                    <li>{{ commentaire.contenu }}</li>

                    <small>
                        <il>Publié par {{ commentaire.pseudo }}
                            le {{ commentaire.createdAt|date('d/m/Y à h\\hi') }}</il>
                    </small>
                    <br>
                    <br>
                {% else %}
                    <il>Il n'y a aucun commentaire pour l'instant !</il>
                {% endfor %}
            </ul>
        </div>

        <div class="shadow p-3 mb-5 bg-white rounded">
            <h5 class="display-4 text-center mb-5">Ajouter un commentaire</h5>
            {{ form(commentaireForm) }}
        </div>
    </div>
{% endblock %}
