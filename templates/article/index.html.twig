{% extends 'base.html.twig' %}

{% block title %}La liste des articles{% endblock %}

{% block body %}
    <div class="container">
        {% for  article in articles %}
            <div class="row">
                <h2> {{ article.titre }}</h2>
            </div>
            <p>{{ article.contenu | raw }}</p>
        {% endfor %}

        <hr>
        <div class="navigation">
            {{ knp_pagination_render(articles) }}
        </div>
    </div>
{% endblock %}
